extends ../shared/template

block less
    link(rel='stylesheet', href='/less/record-show.css')

block content

  .row
    .small-12.columns.large-4.columns#info
      h3= title
      h6='Account: '
        a(href='/accounts/members/'+record.accountId)= account.name
      h6= 'Paid by: ' + user.name
      h6= 'Amount: ' + record.amount
      if record.note
        h6= 'Note: ' + record.note
    .small-6.columns
      div#image(style='background-image:url('+record.attachment+')')
    .small-4.columns
