doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    block less
    script(src='/js/vendor/modernizr.js')
  body
    nav(class='top-bar', data-topbar)
      ul.title-area
        li.name
          h1: a(href='/') Happy Share
        li.toggle-topbar.menu-icon
          a(href='#') Menu

      section.top-bar-section
        ul.left
          if user
            li.divider
            li: a(href='/accounts') Accounts
            li.divider
            li: a(href='/accounts/new') Create Account
        ul.right
          if user
            li.divider
            li: a(href='/users/'+user._id.toString())='Welcome '+user.name
            li.divider
            li: a(href='/logout') Logout
          else
            li.divider
            li: a(href='/login') Login
            li.divider
            li: a(href='/register') Register

    .row
      .small-12.columns
        block content

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.min.js')
    script(src='/js/vendor/foundation.topbar.js')
    script(src='/js/vendor/accounting.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

